<div class="mt-4">
    <h3>Edit Game</h3>
    <form class="mt-4" method="POST" action="/games/{{game._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Tên</label>
            <input type="text" class="form-control" value="{{game.name}}" id="name" name = "name">
        </div>
        <div class="form-group">
            <label for="Type">Thể Loại:</label>      
            <label>{{game.Type}}</label>
            <div>
            {{#each category}}
            <input type="checkbox" name = "Type" value="{{this.name}}">   
                <label>{{this.name}}</label>      
            </input>
            {{/each}}
            </div>
        </div>
        <div class="form-group">
            <label for="Language">Ngôn ngữ:</label>
            <label>{{game.Language}}</label> 
            <div>
            <input type="checkbox" name = "Language" value="Tiếng Anh">   
                <label>Tiếng Anh</label>      
            </input>      
            <input type="checkbox" name = "Language" value="Tiếng Việt">   
                <label>Tiếng Việt</label>      
            </input>   
            <input type="checkbox" name = "Language" value="Tiếng Trung">   
                <label>Tiếng Trung</label>      
            </input>     
            </div>
        </div>
        <div class="form-group">
            <label for="Capacity">Dung lượng</label>
            <input type="text" class="form-control" value="{{game.Capacity}}" id="Capacity" name = "Capacity">
        </div>
        <div class="form-group">
            <label for="Configuration">Cấu hình</label>
            <input type="text" class="form-control" value="{{game.Configuration}}" id="Configuration" name = "Configuration">
        </div>
        
        <div class="form-group">
            <label for="Development">Dòng game:</label>
            <label>{{game.Development}}</label>
            <select id="Development"  name = "Development">      
                <option>Indie</option>
                <option>Bom Tấn (AAA) </option>
            </select>
        </div>

        <div class="form-group">
            <label for="Filedl">Link Download</label>
            <input type="text" class="form-control" value="{{game.Filedl}}" id="Filedl" name = "Filedl">
        </div>  

        <div class="form-group">
            <label for="image">Image</label>
            <textarea class="form-control" id="image" name = "image">{{game.Image}}</textarea>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>