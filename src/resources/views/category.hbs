<!-- Breadcrumb Begin -->
<div class="breadcrumb-option">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="breadcrumb__links">
          <a href="/"><i class="fa fa-home"></i> Home</a>
          <a href="/category">Thể loại</a>
          {{#if category}}
            <span>{{category.name}}</span>
          {{else}}
            <span></span>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Breadcrumb End -->

<!-- Product Section Begin -->
<section class="product spad">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="product_page_title">
          <div class="row">
            <div class="col-lg-8 col-md-8 col-sm-8">
              <div class="section-title">
                {{#if category}}
                  <h4>{{category.name}}</h4>
                {{else}}
                  <h4>ALL GAME</h4>
                {{/if}}
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-12">
            <div class="searchBar">
              <form method="GET" action="/category">
                <input
                  class="search-in"
                  type="search"
                  name="search"
                  placeholder="Nhập tên game cần tìm"
                />
                <button class="search-btn" type="submit"><svg
                    viewBox="0 0 24 24"
                    style="width: 24px; height: 24px;"
                  ><path
                      fill="#666666"
                      d="M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z"
                    ></path></svg></button>
              </form>
            </div>
          </div>
        </div>
        <div class="row">
          {{#each game}}
            <div class="col-lg-3 col-md-6 col-sm-6">
              <div class="product__item">
                <div class="product__item__pic">
                  <img
                    class="card-img-top"
                    src="{{this.Image}}"
                    alt="{{this.name}}"
                  />
                </div>
                <div class="product__item__text">
                  <ul>
                    {{#each this.Type}}
                      <li><a href="/category/{{this}}">{{this}}</a></li>
                    {{/each}}
                  </ul>
                  <h5><a href="/games/{{this.slug}}">{{this.name}}</a></h5>
                </div>
              </div>
            </div>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</section>